<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".NomeJogadoresActivity">

    <TextView
        android:id="@+id/txt_instrucoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha os nomes dos jogadores"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/txt_nome_jogador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador 1:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txt_instrucoes"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/edt_nome_jogador1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Digite o nome do Jogador 1"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/txt_nome_jogador1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txt_nome_jogador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador 2:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edt_nome_jogador1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edt_nome_jogador2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Digite o nome do Jogador 2"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/txt_nome_jogador2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btn_confirmar_nomes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ComeÃ§ar jogo"
        app:layout_constraintTop_toBottomOf="@id/edt_nome_jogador2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
